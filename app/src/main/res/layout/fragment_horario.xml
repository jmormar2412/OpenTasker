<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".fragments.HorarioFragment">

        <HorizontalScrollView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_timedisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_timedisplay"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_first"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_second"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_third"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_fifth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_fourth"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sixth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_fifth"
                    android:orientation="vertical"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_seventh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rv_sixth"
                    android:orientation="vertical"/>

            </RelativeLayout>

        </HorizontalScrollView>

</ScrollView>
